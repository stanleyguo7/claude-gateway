# Server
PORT=3001
NODE_ENV=development

# CORS - comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001

# Auto-detect Tailscale IP and add to CORS (true by default, set false to disable)
TAILSCALE_AUTO_DETECT=true

# Rate limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=30

# Request body size limit
BODY_LIMIT=16kb

# Claude CLI
CLAUDE_CLI_PATH=/usr/local/bin/claude
CLAUDE_TIMEOUT=120000
DEFAULT_MODEL=
DEFAULT_SYSTEM_PROMPT=
# Idle timeout before closing long-lived Claude process (ms)
PROCESS_IDLE_TIMEOUT=300000

# Messages
MAX_MESSAGE_LENGTH=10000

# File upload
MAX_FILE_SIZE=10485760
MAX_FILE_COUNT=5
UPLOAD_CLEANUP_AGE=3600000
UPLOAD_CLEANUP_INTERVAL=1800000

# Logging (debug, info, warn, error)
LOG_LEVEL=

# Graceful shutdown timeout (ms)
SHUTDOWN_TIMEOUT=5000
